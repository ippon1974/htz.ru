ErrorDocument 404 http://www.htz.ru/error404.html
AddType application/x-httpd-php5 .php

RewriteEngine on
Options +FollowSymlinks
RewriteBase /news/show
RewriteRule ^3/([^/]*)\.html$ /news/show/?id=$1 [L]
RewriteRule ^year/([^/]*)/month/([^/]*)\.html$ /news/show/?year=$1&month=$2 [L]
RewriteRule (.+)(/)$ $1.html [L,QSA]









